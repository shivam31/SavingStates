<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    >

    <CheckBoxPreference
        android:key="pref_text_bold"
        android:title="@string/make_text_bold_pref"
        android:summary="@string/pref_text_bold_summary"
        android:defaultValue="false" />

    <ListPreference
        android:key="pref_text_size"
        android:title="@string/pref_text_size"
        android:summary="@string/pref_text_size_summ"
        android:entries="@array/text_size_values"
        android:defaultValue="16" />
</PreferenceScreen>